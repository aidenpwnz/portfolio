{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@aidenpwnz/store": ["./libs/store"],
      "@aidenpwnz/types": ["./libs/types"],
      "@aidenpwnz/utils": ["./libs/utils"],
      "@aidenpwnz/components": ["./libs/ui/components"],
      "@aidenpwnz/fragments": ["./libs/ui/fragments"],
      "@aidenpwnz/typography": ["./libs/ui/typography"]
    }
  }
}
